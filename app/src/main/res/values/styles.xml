<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemaAlavadeira" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AlavadeiraTheme</item>
        <item name="colorPrimaryDark">@color/AlavadeiraThemePrimary</item>
        <item name="colorAccent">@color/ColorItensAlavadeira</item>
    </style>

    <style name="ThemaAlavadeira.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemaAlavadeira.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemaAlavadeira.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
