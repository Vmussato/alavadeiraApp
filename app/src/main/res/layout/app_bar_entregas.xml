<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alavadeiraapp.com.example.maiconh.alavadeiraapp.EntregasActivity"
    app:layout_collapseParallaxMultiplier="0.7">


    <include layout="@layout/content_entregas"
        android:layout_height="427dp" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemaAlavadeira.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemaAlavadeira.PopupOverlay"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <ProgressBar

                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar3"
                android:max="6"
                android:minWidth="150dp"
                android:progress="1"
                android:progressTint="#FF7143"
                android:progressBackgroundTint="#808366"
                android:minHeight="10dip"
                android:maxHeight="10dip"


                android:layout_marginRight="18dp"
                android:layout_marginEnd="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="concluidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:layout_below="@+id/progressBar3"
                android:layout_alignRight="@+id/progressBar3"
                android:layout_alignEnd="@+id/progressBar3"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressoEntregas"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView4"
                android:layout_toStartOf="@+id/textView4"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

            <TextView
                android:id="@+id/rotaEntregas"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Rota A"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:textSize="22dp"

                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
