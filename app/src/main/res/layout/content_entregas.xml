<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_entregas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alavadeiraapp.com.example.maiconh.alavadeiraapp.EntregasActivity"
    tools:showIn="@layout/app_bar_entregas">

    <TextView
        android:text="PROXIMAS ENTREGAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
 />

    <ListView
        android:id="@+id/listaEntregasPendente"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="CONCLUIDOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"

        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/textView3" />

    <ListView
        android:id="@+id/listaEntregasConcluidas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
