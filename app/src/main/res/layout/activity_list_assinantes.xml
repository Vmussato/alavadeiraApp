<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="EM FILA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAssinanteEmFila"

       android:textSize="@dimen/title_listView"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textColor="#333333"
        android:paddingRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnLigar" />

    <Button
        android:id="@+id/btnLigar"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/ic_call_black_24dp_black"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignBaseline="@+id/txtAssinanteEmFila"
        android:layout_alignBottom="@+id/txtAssinanteEmFila"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />


</RelativeLayout>